        </testsuite>
        <testsuite name="ES2016">
            <directory>test/Peast/Syntax/ES2016</directory>
        </testsuite>
        <testsuite name="ES2017">
            <directory>test/Peast/Syntax/ES2017</directory>
        </testsuite>
        <testsuite name="Traverser">
            <file>test/Peast/TraverserTest.php</file>
        </testsuite>
        <testsuite name="Renderer">
            <file>test/Peast/RendererTest.php</file>
        </testsuite>
        <testsuite name="Node">
            <directory>test/Peast/Syntax/Node</directory>
        </testsuite>
    </testsuites>
